<Page x:Class="EarTrainer.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EarTrainer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid Background="#FF1C1427">


        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>

        <Frame x:Name="MenuFrame"
               NavigationUIVisibility="Hidden"/>

        <Label Content="Ear Trainer" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Height="80" Width="400" FontFamily="Bahnschrift Light" FontSize="75" Foreground="White"/>
        <Button x:Name="StartBtn" Content="Start" HorizontalAlignment="Left" Height="100" Margin="100,275,0,0" VerticalAlignment="Top" Width="200" FontFamily="Bahnschrift SemiBold" Click="StartBtn_Click" FontSize="40" Background="#FFA9A6AC" Panel.ZIndex="5"/>
        <Button x:Name="SettingsBtn" Content="Settings" HorizontalAlignment="Left" Height="100" Margin="512,275,0,0" VerticalAlignment="Top" Width="200" FontFamily="Bahnschrift SemiBold" FontSize="40" Background="#FFA9A6AC" Panel.ZIndex="5" Click="SettingsBtn_Click"/>


    </Grid>
</Page>
